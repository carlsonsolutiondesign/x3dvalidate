                        "#sourceText":[
"ecmascript:",
"function initialize ()",
"{",
"\tbeamColor = noContactColor;",
"\tif (wireframe == true) wireframeChoice = 1;",
"\tif (solid     == true) solidChoice     = 1;",
"\tif (traceEnabled)",
"\t{",
"//\t\tBrowser.print ('[BeamCone ' + name + '] trace=' + trace + '\n');",
"\t\tBrowser.print ('[BeamCone ' + name + '] wireframeChoice=' + wireframeChoice + ', solidChoice=' + solidChoice) + '\n';",
"\t\tBrowser.print ('[BeamCone ' + name + '] contactColor=' + contactColor.toString() + ', noContactColor=' + noContactColor.toString() + '\n');",
"\t}",
"}",
"function contact (newDetect, timeStamp)",
"{",
"\tif (newDetect) beamColor = contactColor;",
"\telse           beamColor = noContactColor;",
"\tif (traceEnabled) Browser.print ('[BeamCone ' + name + '] contact=' + newDetect + ', beamColor=' + beamColor.toString() + '\n');",
"}"
]
