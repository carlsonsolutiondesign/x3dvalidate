              "#sourceText":[
"ecmascript:",
"\t\tfunction set_active( b, tm ) {",
"\t\t\t// ignore button releases",
"\t\t\tif ( b == false ) return;",
"",
"\t\t\t// toggle on button presses",
"\t\t\tif ( on == true ) on = false;",
"\t\t\telse              on = true;",
"\t\t\ton_changed = on;",
"\t\t}"
]
