          }
        ]
    },
    "Scene": {
        "-children":[
          {
            "#comment":"================================"
          },
          {
            "#comment":"TODO color mapper in scene for Background"
          },
          { "Background":
            {
              "@skyColor":[0.72549,1,0.721569]
            }
          },
          { "Viewpoint":
            {
              "@description":"Texture angle viewer",
              "@position":[0,0,11]
            }
          },
          { "NavigationInfo":
            {
              "@type":["NONE"]
            }
          },
          { "Transform":
            {
              "@translation":[0,3.6,0],
              "-children":[
                { "Shape":
                  {
                    "-geometry":
                      { "Text":
                        {
                          "@DEF":"AngleOutputText",
                          "@string":["Texture angle viewer"],
                          "-fontStyle":
                            { "FontStyle":
                              {
                                "@justify":["MIDDLE","MIDDLE"],
                                "@size":0.7
                              }
                            }
                        }
                      },
                    "-appearance":
                      { "Appearance":
                        {
                          "-material":
                            { "Material":
                              {
                                "@diffuseColor":[0.2,0.4,0.8]
                              }
                            }
                        }
                      }
                  }
                }
              ]
            }
          },
          {
            "#comment":"================================"
          },
          { "Anchor":
            {
              "@description":"this QR code links to http://qr.nps.edu",
              "@url":["http://qr.nps.edu"],
              "-children":[
                { "Transform":
                  {
                    "@DEF":"ImageTransform",
                    "-children":[
                      { "Shape":
                        {
                          "-children":[
                            {
                              "#comment":"TODO add a single geometry node here"
                            }
                          ],
                          "-geometry":
                            { "IndexedFaceSet":
                              {
                                "@coordIndex":[1,0,2,3,0,-1],
                                "-coord":
                                  { "Coordinate":
                                    {
                                      "@point":[-3,-3,0,3,-3,0,3,3,0,-3,3,0,-3,-3,0]
                                    }
                                  }
                              }
                            },
                          "-appearance":
                            { "Appearance":
                              {
                                "-material":
                                  { "Material":
                                    {
                                    }
                                  },
                                "-texture":
                                  { "ImageTexture":
                                    {
                                      "@url":["images/QrNpsEduCode.png","http://X3dGraphics.com/examples/X3dForAdvancedModeling/MultiTexture3D/images/QrNpsEduCode.png"]
                                    }
                                  }
                              }
                            }
                        }
                      }
                    ]
                  }
                }
              ]
            }
          },
          { "Transform":
            {
              "@DEF":"SliderSituate",
              "@rotation":[0,0,1,-1.570796],
              "@translation":[0,-3.6,0],
              "-children":[
                { "Transform":
                  {
                    "@DEF":"SliderKnobTransform",
                    "-children":[
                      { "Shape":
                        {
                          "-geometry":
                            { "Cylinder":
                              {
                                "@height":0.2,
                                "@radius":0.2
                              }
                            },
                          "-appearance":
                            { "Appearance":
                              {
                                "@DEF":"Metals13Appearance",
                                "-material":
                                  { "Material":
                                    {
                                      "@ambientIntensity":0.25641,
                                      "@diffuseColor":[0.222308,0.15428,0],
                                      "@specularColor":[0.882653,0.860832,0.687861],
                                      "-children":[
                                        {
                                          "#comment":"Universal Media Library: Metals 13"
                                        }
                                      ]
                                    }
                                  }
                              }
                            }
                        }
                      },
                      { "PlaneSensor":
                        {
                          "@DEF":"SliderPlaneSensor",
                          "@description":"select and drag to change angle values",
                          "@maxPosition":[3,0],
                          "@minPosition":[-3,0]
                        }
                      },
                      { "Script":
                        {
                          "@DEF":"SliderScript",
                          "field": [
                            {
                              "@name":"set_trackPoint",
                              "@accessType":"inputOnly",
                              "@appinfo":"input provided by SliderKnobTransform PlaneSensor output",
                              "@type":"SFVec3f"
                            },
                            {
                              "@name":"angle",
                              "@accessType":"initializeOnly",
                              "@type":"SFFloat",
                              "@value":0.0
                            },
                            {
                              "@name":"y",
                              "@accessType":"initializeOnly",
                              "@type":"SFFloat",
                              "@value":0.0
                            },
                            {
                              "@name":"rotation_changed",
                              "@accessType":"outputOnly",
                              "@appinfo":"output provided for ImageTransform rotation",
                              "@type":"SFRotation"
                            },
                            {
                              "@name":"translation_changed",
                              "@accessType":"outputOnly",
                              "@appinfo":"output provided for SliderKnobTransform translation",
                              "@type":"SFVec3f"
                            },
                            {
                              "@name":"angleString_changed",
                              "@accessType":"outputOnly",
                              "@appinfo":"output provided for degrees of rotation",
                              "@type":"MFString"
                            },
                            {
                              "@name":"tracePrint",
                              "@accessType":"initializeOnly",
                              "@appinfo":"console output for debugging",
                              "@type":"SFBool",
                              "@value":true
                            }
                          ],
                          "#sourceText":[
"ecmascript:",
"",
"function set_trackPoint (eventValue)",
"{",
"   y = eventValue.y;",
"   // clamp values to prevent overrun/underrun",
"   if (y >  3.0) y =  3.0;",
"   if (y < -3.0) y = -3.0;",
"   Browser.println ('y=' + y);",
"   translation_changed = new SFVec3f (0.0, y, 0.0);",
"   angle = Math.round(y * 90.0 / 3.0);",
"   rotation_changed = new SFRotation (0, 1, 0, angle * Math.PI / 180.0);",
"   var holdString = angle.toString() + ' degrees';",
"   angleString_changed = new MFString (new SFString(holdString));",
"   if (tracePrint)",
"   {",
"      Browser.println (\"========================\");",
"      Browser.println (\"set_trackPoint=\" + eventValue);",
"      Browser.println (\"translation_changed=\" + translation_changed.toString() + \", rotation_changed=\" + rotation_changed.toString());",
"      Browser.println (\"angle=\" + holdString + \", angleString_changed=\" + angleString_changed.toString());",
"   }",
"}"
]
                        }
                      },
                      { "ROUTE":
                        {
                          "@fromField":"trackPoint_changed",
                          "@fromNode":"SliderPlaneSensor",
                          "@toField":"set_trackPoint",
                          "@toNode":"SliderScript"
                        }
                      },
                      { "ROUTE":
                        {
                          "@fromField":"rotation_changed",
                          "@fromNode":"SliderScript",
                          "@toField":"rotation",
                          "@toNode":"ImageTransform"
                        }
                      },
                      { "ROUTE":
                        {
                          "@fromField":"translation_changed",
                          "@fromNode":"SliderScript",
                          "@toField":"translation",
                          "@toNode":"SliderKnobTransform"
                        }
                      },
                      { "ROUTE":
                        {
                          "@fromField":"angleString_changed",
                          "@fromNode":"SliderScript",
                          "@toField":"string",
                          "@toNode":"AngleOutputText"
                        }
                      }
                    ]
                  }
                }
              ]
            }
          },
          { "Transform":
            {
              "@DEF":"SliderBar",
              "@rotation":[0,0,1,1.570796],
              "@translation":[0,-3.6,0],
              "-children":[
                { "Shape":
                  {
                    "-geometry":
                      { "Cylinder":
                        {
                          "@height":6,
                          "@radius":0.05
                        }
                      },
                    "-appearance":
                      { "Appearance":
                        {
                          "@USE":"Metals13Appearance"
                        }
                      }
                  }
                }
              ]
            }
          }
        ]
    }
  }
}