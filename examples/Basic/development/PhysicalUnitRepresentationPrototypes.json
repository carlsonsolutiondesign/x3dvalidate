    "Scene": {
        "-children":[
          {
            "#comment":"===================="
          },
          {
            "#comment":"Initial approach: direct scaling"
          },
          { "Transform":
            {
              "@DEF":"MyZeptoScale",
              "@scale":[1.0E-10,1.0E-10,1.0E-10],
              "-children":[
                { "Transform":
                  {
                    "@scale":[1.0E-11,1.0E-11,1.0E-11],
                    "-metadata":
                      { "MetadataString":
                        {
                          "@name":"lengthUnit",
                          "@value":["ZEPTO meters"]
                        }
                      },
                    "-children":[
                      {
                        "#comment":"scaled content goes here"
                      },
                      { "Shape":
                        {
                          "-geometry":
                            { "Box":
                              {
                              }
                            }
                        }
                      }
                    ]
                  }
                }
              ]
            }
          },
          {
            "#comment":"===================="
          },
          {
            "#comment":"Second approach: prototype nodes for scaling"
          },
          {
            "#comment":"===================="
          },
          { "ProtoDeclare":
            {
              "@name":"ZeptoScale",
              "@appinfo":"ZeptoScale applies a uniform scale factor of 10^-21 to all children",
              "ProtoInterface": {
                  "field": [
                    {
                      "@name":"children",
                      "@accessType":"inputOutput",
                      "@type":"MFNode",
                      "-children":[
                        {
                          "#comment":"initialization: NULL node"
                        }
                      ]
                    }
                  ],
                  "-children":[
                    {
                      "#comment":"TODO: can add other fields for Transform node here to ensure completeness"
                    }
                  ]
              },
              "ProtoBody": {
                  "-children":[
                    { "Transform":
                      {
                        "@DEF":"ZeptoScale",
                        "@scale":[1.0E-10,1.0E-10,1.0E-10],
                        "-children":[
                          { "Transform":
                            {
                              "@scale":[1.0E-11,1.0E-11,1.0E-11],
                              "IS": {
                                  "connect": [
                                    {
                                      "@nodeField":"children",
                                      "@protoField":"children"
                                    }
                                  ]
                              }
                            }
                          }
                        ]
                      }
                    }
                  ]
              }
            }
          },
          {
            "#comment":"===================="
          },
          {
            "#comment":"Example use of prototype: the following should be very very small..."
          },
          { "ProtoInstance":
            {
              "@name":"ZeptoScale",
              "fieldValue": [
                {
                  "@name":"children",
                  "-children":[
                    { "Shape":
                      {
                        "-geometry":
                          { "Sphere":
