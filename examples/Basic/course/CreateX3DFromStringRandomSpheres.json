    "Scene": {
        "-children":[
          { "NavigationInfo":
            {
              "@avatarSize":[0.1,1.6,2.0],
              "@headlight":false,
              "@speed":5,
              "@type":["EXAMINE","WALK","ANY"]
            }
          },
          { "Background":
            {
              "@skyAngle":[1.1,1.57],
              "@skyColor":[0.3,0.3,1,0.4,0.4,1,0.7,0.7,0.9]
            }
          },
          { "DirectionalLight":
            {
              "@direction":[0,-0.5,-1]
            }
          },
          { "DirectionalLight":
            {
              "@direction":[-1,-0.5,0.5],
              "@intensity":0.9
            }
          },
          { "DirectionalLight":
            {
              "@direction":[1,-0.5,0.5],
              "@intensity":0.8
            }
          },
          { "Viewpoint":
            {
              "@description":"Interaction view",
              "@position":[50,1.6,150]
            }
          },
          { "Viewpoint":
            {
              "@description":"Plan (top-down) view",
              "@orientation":[1,0,0,-1.54],
              "@position":[50,200,50]
            }
          },
          { "Shape":
            {
              "-appearance":
                { "Appearance":
                  {
                    "-material":
                      { "Material":
                        {
                          "@diffuseColor":[0.3,0.3,1],
                          "@transparency":0.5
                        }
                      }
                  }
                },
              "-geometry":
                { "Box":
                  {
                    "@size":[1000,0.01,1000]
                  }
                }
            }
          },
          { "Transform":
            {
              "@translation":[50,1.6,140],
              "-children":[
                {
                  "#comment":"the following is a common interaction design pattern in X3D"
                },
                { "Billboard":
                  {
                    "-children":[
                      { "Shape":
                        {
                          "-appearance":
                            { "Appearance":
                              {
                                "-material":
                                  { "Material":
                                    {
                                      "@diffuseColor":[0.1,0.3,0.2],
                                      "@emissiveColor":[0.3,0.6,0.9]
                                    }
                                  }
                              }
                            },
                          "-geometry":
                            { "Text":
                              {
                                "@string":["Ten random spheres","computed at runtime"],
                                "-fontStyle":
                                  { "FontStyle":
                                    {
                                      "@justify":["MIDDLE","MIDDLE"]
                                    }
                                  }
                              }
                            }
                        }
                      },
                      { "TouchSensor":
                        {
                          "@DEF":"TouchText",
                          "@description":"Touch text to recompute random spheres"
                        }
                      },
                      {
                        "#comment":"Transparent Box makes the text much more accessible/clickable"
                      },
                      { "Shape":
                        {
                          "-geometry":
                            { "Box":
                              {
                                "@size":[8,2,0.1]
                              }
                            },
                          "-appearance":
                            { "Appearance":
                              {
                                "-material":
                                  { "Material":
                                    {
                                      "@transparency":1
                                    }
                                  }
                              }
                            }
                        }
                      }
                    ]
                  }
                }
              ]
            }
          },
          {
            "#comment":"ROOT is used at initialize time as parent for randomly generated Shape children"
          },
          { "Group":
            {
              "@DEF":"HoldsAutogeneratedContent"
            }
          },
          { "Script":
            {
              "@DEF":"SphereGeneratorScript",
              "@directOutput":true,
              "field": [
                {
                  "@name":"ModifiableExternalNode",
                  "@accessType":"initializeOnly",
                  "@type":"SFNode",
                  "-children":[
                    { "Group":
                      {
                        "@USE":"HoldsAutogeneratedContent"
                      }
                    }
                  ]
                },
                {
                  "@name":"recompute",
                  "@accessType":"inputOnly",
                  "@type":"SFBool"
                }
              ],
              "#sourceText":[
"ecmascript:",
"",
"function R ()",
"{",
"\treturn Math.random();",
"}",
"function recompute (isActive)",
"{",
"\tif (isActive==true) initialize();",
"}",
"",
"function initialize()",
"{",
"  for (i=0; i < 10; i++)",
"  {",
"    rand1 = 100*R();",
"    rand2 = 100*R();",
"    rand3 = 20*R();",
"    rand4 = 40*R();",
"    rand5 = 20*R();",
"    sceneString =    '<X3D version=\"3.1\" profile=\"Interchange\">\n' +",
"                     '  <Scene>\n' +",
"                     '      <Transform translation=\"' + rand1 + ' 0 ' + rand2 + '\" >\n' +",
"                     '           <Shape>\n' +",
"                     '                   <Appearance>\n' +",
"                     '                      <Material diffuseColor=\"' + R() + ' ' + R() + ' ' + R() + '\"/>\n' +",
"                     '                   </Appearance>\n' +",
"                     '                   <Sphere radius=\"' + (rand3 / 2) + '\"/>\n' +",
"                     '           </Shape>\n' +",
"                     '      </Transform>\n' +",
"                     '  </Scene>\n' +",
"                     '</X3D>\n' +",
"                     '<!--==============================================-->\n';",
"",
"       Browser.print (sceneString);",
"//     newNode = Browser.createVrmlFromString(sceneString);",
"       newNode = Browser.createX3DFromString(sceneString);",
"       ModifiableExternalNode.children[i] = newNode[0];",
"  }",
"}"
]
            }
          },
          { "ROUTE":
            {
              "@fromField":"isActive",
              "@fromNode":"TouchText",
              "@toField":"recompute",
              "@toNode":"SphereGeneratorScript"
            }
          }
        ]
    }
  }
}